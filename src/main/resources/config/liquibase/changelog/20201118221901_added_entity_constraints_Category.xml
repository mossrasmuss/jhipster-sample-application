<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Category.
    -->
    <changeSet id="20201118221901-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="category"
                                 constraintName="fk_category_parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="category_property"
                                 constraintName="fk_category_property_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="property_id"
                                 baseTableName="category_property"
                                 constraintName="fk_category_property_property_id"
                                 referencedColumnNames="id"
                                 referencedTableName="property"/>
        
    </changeSet>
</databaseChangeLog>
